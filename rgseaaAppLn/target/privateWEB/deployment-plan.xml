<?xml version='1.0' encoding='UTF-8'?>
<deployment-plan
        xmlns="http://xmlns.oracle.com/weblogic/deployment-plan"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.oracle.com/weblogic/deployment-plan
        http://xmlns.oracle.com/weblogic/deployment-plan/1.0/deployment-plan.xsd"
        global-variables="false">

    <application-name>privateWEB.war</application-name>

    <variable-definition>
        <!-- Common -->
        <variable>
            <name>ACTIVE_PROFILE</name>
            <value>local</value>
        </variable>

        <variable>
            <name>PATH_REPO</name>
            <value>./</value>
        </variable>
        <variable>
            <name>PROXY_HOST</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>PROXY_PORT</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>PROXY_USERNAME</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>PROXY_PASSWORD</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>PATH_KEYSTORE</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>STOREPASS</name>
            <value xsi:nil="true"></value>
        </variable>
        <variable>
            <name>KEYPASS</name>
            <value xsi:nil="true"></value>
        </variable>
        <!-- / Common -->

        <!-- Database -->
        <variable>
            <name>_DB_JNDI_NAME</name>
            <value>not-used</value>
        </variable>
        <variable>
            <name>DB_SCHEMA_NAME</name>
            <value>WEB_BD_A_O</value>
        </variable>
        <!-- / Database -->

        <!-- JWT -->
        <variable>
            <name>JWT_ISSUER</name>
            <value>rgseaa local</value>
        </variable>
        <variable>
            <name>JWT_SECRET</name>
            <value>oU7nzvi5HVkkSQKbVWnN2o934nEW3fzMbV2Y2bPYkM9bgW7WnYMZKEJFhrStuM29</value>
        </variable>
        <variable>
            <name>JWT_TOKEN_TTL</name>
            <value>480</value>
        </variable>
        <variable>
            <name>JWT_TEMP_TOKEN_TTL</name>
            <value>40</value>
        </variable>
        <!-- JWT -->

        <!-- AUTH -->
        <variable>
            <name>AUTH_CONTEXT_PATH</name>
            <value>/rest</value>
        </variable>

        <!-- Logging -->
        <variable>
            <name>AUTH_LOGGING_FILENAME</name>
            <value>.//logs/rgseaaAppLn_${weblogic.Name}.log</value>
        </variable>
        <variable>
            <name>AUTH_LOGGING_MAX_FILESIZE</name>
            <value>50MB</value>
        </variable>

        <variable>
            <name>AUTH_WEBLOGIC_LOGGING_FILENAME</name>
            <value>.//logs/rgseaaAppLn_server.log</value>
        </variable>
        <variable>
            <name>AUTH_WEBLOGIC_LOGGING_MAX_FILESIZE</name>
            <value>50</value>
        </variable>
        <!-- / Logging -->
        <!-- / AUTH -->
    </variable-definition>

    <module-override>
        <module-name>privateWEB.war</module-name>
        <module-type>war</module-type>

        <module-descriptor external="false">
            <root-element>weblogic-web-app</root-element>
            <uri>WEB-INF/weblogic.xml</uri>

            <variable-assignment>
                <name>AUTH_CONTEXT_PATH</name>
                <xpath>/weblogic-web-app/context-root</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>DB_JNDI_NAME</name>
                <xpath>/weblogic-web-app/resource-description/[res-ref-name="not-used"]/jndi-name</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>AUTH_WEBLOGIC_LOGGING_FILENAME</name>
                <xpath>/weblogic-web-app/logging/log-filename</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>AUTH_WEBLOGIC_LOGGING_MAX_FILESIZE</name>
                <xpath>/weblogic-web-app/logging/file-size-limit</xpath>
                <operation>replace</operation>
            </variable-assignment>
        </module-descriptor>

        <module-descriptor external="false">
            <root-element>web-app</root-element>
            <uri>WEB-INF/web.xml</uri>

            <variable-assignment>
                <name>PATH_REPO</name>
                <xpath>/web-app/env-entry/[env-entry-name="PATH_REPO"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>ACTIVE_PROFILE</name>
                <xpath>/web-app/env-entry/[env-entry-name="ACTIVE_PROFILE"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>AUTH_CONTEXT_PATH</name>
                <xpath>/web-app/env-entry/[env-entry-name="AUTH_CONTEXT_PATH"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>DB_JNDI_NAME</name>
                <xpath>/web-app/env-entry/[env-entry-name="DB_JNDI_NAME"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>DB_SCHEMA_NAME</name>
                <xpath>/web-app/env-entry/[env-entry-name="DB_SCHEMA_NAME"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>AUTH_LOGGING_FILENAME</name>
                <xpath>/web-app/env-entry/[env-entry-name="AUTH_LOGGING_FILENAME"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>AUTH_LOGGING_MAX_FILESIZE</name>
                <xpath>/web-app/env-entry/[env-entry-name="AUTH_LOGGING_MAX_FILESIZE"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>

            <variable-assignment>
                <name>JWT_ISSUER</name>
                <xpath>/web-app/env-entry/[env-entry-name="JWT_ISSUER"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>JWT_SECRET</name>
                <xpath>/web-app/env-entry/[env-entry-name="JWT_SECRET"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>JWT_TOKEN_TTL</name>
                <xpath>/web-app/env-entry/[env-entry-name="JWT_TOKEN_TTL"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>JWT_TEMP_TOKEN_TTL</name>
                <xpath>/web-app/env-entry/[env-entry-name="JWT_TEMP_TOKEN_TTL"]/env-entry-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
        </module-descriptor>
    </module-override>
</deployment-plan>
